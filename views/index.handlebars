<h1 class="center">Make A Burger!</h1>

<div class="row">

  <div class="col s4">
    <div id="notDevoured">
      <h2>Not Devoured!</h2>
      <ul>
        {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
      </ul>
    </div>
  </div>


  <div class="col s4">
    <img src="https://media1.giphy.com/media/WBTUlyKBVlTTa/giphy_s.gif" data-still="https://media1.giphy.com/media/WBTUlyKBVlTTa/giphy_s.gif"
      data-animate="https://media1.giphy.com/media/WBTUlyKBVlTTa/giphy.gif" data-state="still" class="gif" id="burgergif">
  </div>


  <div class="col s4">
    <div id="devoured"></div>
      <h2>Devoured!</h2>
      <ul>
        {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
      </ul>
    </div>
  </div>

</div>





<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>